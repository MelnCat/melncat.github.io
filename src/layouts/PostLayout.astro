---
import type { CollectionEntry } from "astro:content";
import Head from "../components/Head.astro";

type Props = CollectionEntry<"posts">["data"];

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<Head title={title} />
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	* {
		box-sizing: border-box;
	}
</style>
